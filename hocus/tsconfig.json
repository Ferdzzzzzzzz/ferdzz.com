{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "module": "commonjs", //ESNext
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "ES2019",
        "strict": true,
        "baseUrl": "./src",
        "paths": {
            "~/*": [
                "./src/*",
            ],
        },
        "noEmit": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true
    }
}